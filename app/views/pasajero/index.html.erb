



<div class="container">
    <div class="row">
        <div class="col-sm-12">
                <h1>Buscar Taxi</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <%= render "layouts/map" %>
        </div>
        <div class="col-sm-6">
            <form name="search_taxi" id="pasajero_search_taxi" >
                <div class="form-group">
                    <label for="point_start"> <span class="fa fa-map-marker fa-fw"></span> Punto de Inicio</label>
                    <div class="input-group">
                        
                        <input 
                            type="text" 
                            class="form-control" 
                            id="search_geo_start" 
                            name="search_geo_start" 
                            placeholder="Punto de inicio">
                            
                        <span class="input-group-btn">
                            <button class="btn btn-default" onclick="tMaps.geolocation()" type="button">
                                <i class="fa fa-globe fa-fw"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="form-group">

                    <label for="txt_referencia"> <span class="fa fa-map-signs fa-fw"></span> Punto destino</label>

                    <input
                    type="text"
                    class="form-control"
                    name="search_geo_end"
                    id="search_geo_end"
                    placeholder="Punto destino">

                </div>
                <div class="form-group">
                    <label for="txt_referencia"> <span class="fa fa-location-arrow fa-fw"></span> Referencia</label>
                    <textarea name="search_referencia" class="form-control" id="" cols="30" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="button" onclick="tPasajero.searchTaxi()" class="btn btn-primary btn-block">
                    <i class="fa fa-phone"></i> Llamar Taxi
                    </button>
                </div>
                <div class="form-group">
                    <div class="progress">
                        <div class="progress-bar progress-bar-success progress-bar-striped" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                            <span >Buscando..</span>
                        </div>
                    </div>
                </div>
              <% if current_user %>
                  <input type="hidden" name="user_id" value="<%= current_user.id %>">
              <% end %>

            </form>
        </div>
    </div>
</div>

