
<section class="home full-height">
    
    <div  class="container">
        
            <div class="row ">
                <div class='background-login'>
                    <div class="col-sm-6">
                        <p>
                            <h2 id=plogin1>
                                Bienvenido a  la forma más sencilla de viajar con solo presionar un boton <br />
                                <small id=plogin2>Ingresa y empieza a vivir una nueva experiencia</small>
                            </h2>                        
                        </p>
                        
                    </div>
        
                    <div class="col-sm-6">
                        <div class="module form-module">
                                <div class="toggle">
                                    <i class="fa fa-times fa-pencil"></i>
                                <div class="tooltip">Registrate</div>
                            </div>
                            
                            <div class="form">
                              <h2>Iniciar Sesión</h2>
                              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'test' }) do |f| %>
                                
                                  <%= f.input :email, placeholder: 'Usuario', required: false, autofocus: true, label: false %>
                                  <%= f.input :password, placeholder: 'Contraseña',  required: false, label: false %>
                                  
                                  
                                  <%= f.button :submit, "Login" %>
                                  
                              <% end %>
                                 <%= render "devise/shared/links" %>
                              
                            </div>
                            
                            <div class="form">
                              <h2>Crear Cuenta</h2>
                              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <%= f.error_notification %>

                                <div class="form-inputs">
                                  <%= f.input :email, placeholder: 'Correo Electronico', required: true, autofocus: true, label: false %>
                                  <%= f.input :password, placeholder: 'Contraseña', required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                                  <%= f.input :password_confirmation, placeholder: 'Confirma Contraseña', required: true, label: false %>
                                </div>

                                <div class="form-actions">
                                  <%= f.button :submit, "Registrar" %>
                                </div>
                              <% end %>
                            </div>
                        </div> 
                    </div>
                
            </div>
        </div>
    </div>

</section>




