
<section class="home full-height">

    <div class="container">
        <div class="row ">
            <div class="module form-module">
                <div class="toggle">
                    <i class="fa fa-times fa-pencil"></i>
                <div class="tooltip">Registrate</div>
            </div>
            
            <div class="form">
              <h2>Iniciar Sesión</h2>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html=> { class: 'test' }) do |f| %>
                
                  <%= f.input :email,  placeholder: 'Usuario', required: false, autofocus: true, label: false %>
                  <%= f.input :password, placeholder: 'Contraseña',  required: false, label: false %>
                  <%# f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

                  <%= f.button :submit, "Login" %>
                
              <% end %>
                 <%= render "devise/shared/links" %>
              
            </div>
            
            <div class="form">
                <h2>Crear Cuenta</h2>
             
                <form>
                    <input type="text" placeholder="Usuario"/>
                    <input type="password" placeholder="Contraseña"/>
                    <input type="email" placeholder="Correo electronico"/>
                    <input type="tel" placeholder="Celular"/>
                    <input type="submit" value="Registrar">
                </form>
            </div>
        </div>
    </div>

</section>




